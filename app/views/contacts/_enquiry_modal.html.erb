<div id="enquiry_form" class="modal fade" role="dialog" aria-labelledby="mySmallModalLabel" data-backdrop="static" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog cstm_modal">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="reset" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel1"> Simply fill out the information below for enquiry </h4>
      </div>
      <div class="modal-body">
        <div class="cstm_body">
          <div class="boostr_team_cntnt text-center">
            <%= simple_form_for Contact.new, url:contacts_path , method: 'POST', html: {id: 'contact_form', class:"request_frm text-center", remote: true} do |f|%>
              <div id="error" class="col-md-12"></div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                  <%= f.text_field :first_name, class:"form-control cstm_input", placeholder:"First Name*", required: true%>
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                  <%= f.text_field :last_name, class:"form-control cstm_input", placeholder:"Last Name*", required: true%>
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                  <%=f.email_field :email, class:"form-control cstm_input", placeholder:"Your Email Address*", required: true, email: true%>
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                  <%= f.text_field :phone_number, class:"form-control cstm_input", placeholder:"Your Phone Number*", required: true, number: true%>
                </div>
              </div>
               <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="form-group">
                  <%= f.text_field :age, class:"form-control cstm_input", placeholder:"Age*", required: true, number: true %>
                </div>
              </div>
              <div class="col-lg-12 full_width">
                <div class="form-group">
                  <%= f.text_area(:message, class:'cstm_message', cols: 20, rows: 40, placeholder:"Enter Your Message*", required: true)%>
                </div>
              </div>
              <div class="col-lg-12 full_width">
                <button type="submit" class="default_blue_btn submit_btn">Send Enquiry</button>
              </div>
              <div class="col-lg-12 full_width">
                <span>All form fields designated with a * are required.</span>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

